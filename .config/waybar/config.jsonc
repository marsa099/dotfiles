{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "width": 1280, // Waybar width
    // Choose the order of the modules
    "reload_style_on_change": true,
    "margin-top": 0,
    "margin-bottom": 0,
    "modules-left": ["cpu", "memory", "custom/screencast", "custom/camera"],
    "modules-center": ["niri/workspaces"],
    "modules-right": ["custom/dnd", "group/audio", "group/system"],
    "niri/workspaces": {
         "disable-scroll": true,
         "sort-by-name": true,
         "format": "{icon}",
         "format-icons": {
             "main": "î®´",
             "chat": "î®´",
             "default": "î®´",
         },
     },
    "tray": {
        "icon-size": 12,
        "spacing": 10
    },
    "custom/music": {
        "format": "ï€  {}",
        "escape": true,
        "interval": 5,
        "tooltip": false,
        "exec": "playerctl metadata --format='{{ artist }} - {{ title }}'",
        "on-click": "playerctl play-pause",
        "max-length": 50
    },
    "clock": {
        "timezone": "Europe/Stockholm",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "ğŸ“… {:%d %b  %H:%M:%S}",
        "format": "ğŸ• {:%H:%M}",
        "interval": 1
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"]
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "âš¡ {capacity}%",
        "format-plugged": "ğŸ”Œ {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": [
          "ğŸª«",
          "ğŸ”‹",
          "ğŸ”‹",
          "ğŸ”‹",
          "ğŸ”‹"
        ]
    },
    "pulseaudio#speaker": {
        "format": "ó°•¾",
        "format-muted": "ó°–",
        "on-click": "pavucontrol",
        "tooltip": false
    },
    "pulseaudio#mic": {
        "format": "{format_source}",
        "format-muted": "{format_source}",
        "format-source": "ó°¬",
        "format-source-muted": "ó°­",
        "on-click": "pavucontrol",
        "tooltip": false
    },
    "network": {
        "format-wifi": "{icon} {signalStrength}%",
        "format-ethernet": " {ipaddr}/{cidr}",
        "tooltip-format": "{essid} ({signalStrength}%)\n{ifname} via {gwaddr}",
        "format-linked": " {ifname} (No IP)",
        "format-disconnected": "ó°¤®",
        "format-alt": "{icon}",
        "format-icons": {
            "wifi": ["ó°¤¯", "ó°¤Ÿ", "ó°¤ ", "ó°¤¢", "ó°¤£", "ó°¤¥", "ó°¤¦", "ó°¤¨"],
            "ethernet": "",
            "disconnected": "ó°¤®"
        },
        "interval": 5
    },
   "bluetooth": {
        "format": "ó°‚¯",
        "format-on": "ó°‚±",
        "format-off": "ó°‚¯",
        "format-disabled": "ó°‚²",
        "format-connected": "ó°‚°",
        "format-connected-battery": "ó°‚° {device_battery_percentage}%",
        "tooltip-format": "{controller_alias}\t{controller_address} ({status})\n\n{num_connections} connected",
        "tooltip-format-off": "{controller_alias}\t{controller_address} (off)",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\tó°¥‰ {device_battery_percentage}%",
        "on-click": "blueman-manager"
   },
   "cpu": {
        "interval": 5,
        "format": "ó°“… {usage}%",
        "format-alt": "CPU: {avg_frequency}GHz | {load}",
        "tooltip": true,
        "states": {
            "low": 20,
            "medium": 50,
            "elevated": 70,
            "critical": 85
        }
   },
   "memory": {
        "interval": 5,
        "format": "ó°˜š {percentage}%",
        "format-alt": "MEM: {used:0.1f}GB/{total:0.1f}GB",
        "tooltip-format": "Used: {used:0.1f}GB\nAvailable: {avail:0.1f}GB\nTotal: {total:0.1f}GB",
        "states": {
            "low": 20,
            "medium": 50,
            "elevated": 70,
            "critical": 85
        }
   },
   "group/audio": {
        "orientation": "inherit",
        "modules": ["pulseaudio#mic", "pulseaudio#speaker"]
   },
   "group/system": {
        "orientation": "inherit",
        "modules": ["bluetooth", "network", "battery", "clock"]
   },
   "custom/screencast": {
        "exec": "~/.local/bin/waybar-screencast",
        "return-type": "json",
        "interval": 1,
        "tooltip": true
   },
   "custom/camera": {
        "exec": "~/.local/bin/waybar-camera",
        "return-type": "json",
        "interval": 1,
        "tooltip": true
   },
   "custom/dnd": {
        "exec": "~/.local/bin/waybar-dnd",
        "return-type": "json",
        "interval": 1,
        "tooltip": true,
        "on-click": "~/.local/bin/waybar-dnd-toggle"
   }
}
