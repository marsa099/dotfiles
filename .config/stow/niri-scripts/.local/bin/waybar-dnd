#!/bin/bash

# Waybar DND (Do Not Disturb) module for dunst
# Outputs JSON for waybar with moon icon
# Active: filled moon, Inactive: outline moon (dimmed via CSS)

is_paused=$(dunstctl is-paused)

if [ "$is_paused" = "true" ]; then
    echo '{"text": "󰽥", "tooltip": "Do Not Disturb: ON\nClick to disable", "class": "active"}'
else
    echo '{"text": "󰽥", "tooltip": "Do Not Disturb: OFF\nClick to enable", "class": "inactive"}'
fi
