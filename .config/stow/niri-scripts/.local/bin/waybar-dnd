#!/bin/bash

# Waybar DND (Do Not Disturb) module
# Controls: dunst notifications + system event sounds
# Only shows icon when DND is active

is_paused=$(dunstctl is-paused)

if [ "$is_paused" = "true" ]; then
    echo '{"text": "ó°½¥", "tooltip": "Do Not Disturb: ON\nNotifications + sounds muted\nClick to disable", "class": "active"}'
else
    echo '{"text": "", "tooltip": "Do Not Disturb: OFF\nClick to enable", "class": "inactive"}'
fi
